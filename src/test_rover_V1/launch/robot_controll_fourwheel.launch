<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find test_rover_V1)/config/controllers_new.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/" args="
		/ROBOT/controller/state
		/ROBOT/controller/position/steer_joint_1
		/ROBOT/controller/velocity/wheel_joint_1
		/ROBOT/controller/position/steer_joint_2
		/ROBOT/controller/velocity/wheel_joint_2		
		/ROBOT/controller/position/steer_joint_3
		/ROBOT/controller/velocity/wheel_joint_3
		/ROBOT/controller/position/steer_joint_4
		/ROBOT/controller/velocity/wheel_joint_4
	"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
       <node pkg="robot_state_publisher" type="robot_state_publisher"  name="robot_state_publisher" respawn="false" output="screen">
    <param name="publish_frequency" type="double" value="50.0" />
    <remap from="/joint_states" to="/ROBOT/joint_states" />
  </node>

        <!-- rqt -->
        <node name="rqt_reconfigure" pkg="rqt_reconfigure" type="rqt_reconfigure" />
        <node name="rqt_publisher" pkg="rqt_publisher" type="rqt_publisher" />



</launch>
