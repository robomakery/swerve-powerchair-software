<robot  name="simple_wheelchair">
  
 
  
  <link    name="base_link"/>
  <link    name="base_footprint"/>

  <joint    name="base_joint"    type="fixed">
    <origin      xyz="0 0 0.00"      rpy="0 0 0" />
    <parent      link="base_link" />
    <child       link="chassis_link" />
   </joint>

  <joint    name="footprint_joint"    type="fixed">
    <origin      xyz="0.0 0.0 0.00"      rpy="0 0 3.14" />
    <child       link="base_footprint" />
    <parent      link="base_link" />
   </joint>
   
   

  <joint name="chassis_link_to_base_footprint" type="fixed">
    <parent link="base_footprint"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0"/>
  </joint>  

 
<link name="chassis_link">
    
     <collision>
      <origin xyz="0 0 0.015" rpy="0 0 0" />
      <geometry> 
      <box size="0.8 0.8 0.03" /> 
      </geometry>
    </collision>
    
      <visual>
      <origin
        xyz="0 0 0.015"
        rpy="0 0 0" />
      <geometry>
      <box size="0.8 0.8 0.03" />
      </geometry>
    </visual>  
    
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass
        value="2" />
    <inertia
        ixx="1"
        ixy="0.0"
        ixz="0.0"
        iyy="1"
        iyz="0.0"
        izz="1" />
    </inertial>
    </link>


  <joint name="chair_to_chassis_link" type="fixed">
    <parent link="chassis_link"/>
    <child link="chair"/>
    <origin xyz="0 0 0.015"/>
  </joint>  


<link name="chair">
    
     <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry> 
      <box size="0.2 0.2 0.2" /> 
      </geometry>
    </collision>
    
      <visual>
      <origin
        xyz="0 0 0.1"
        rpy="0 0 0" />
      <geometry>
      <box size="0.2 0.2 0.2" />
      </geometry>
    </visual>  
    
    
    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <mass
        value="1" />
    <inertia
        ixx="1"
        ixy="0.0"
        ixz="0.0"
        iyy="1"
        iyz="0.0"
        izz="1" />
    </inertial>
    </link>

  
  <joint name="backrest_to_chair" type="fixed">
    <parent link="chair"/>
    <child link="backrest"/>
    <origin xyz="-0.1 0 0"/>
  </joint>  


<link name="backrest">
    
     <collision>
      <origin xyz="-0.025 0 0.25" rpy="0 0 0" />
      <geometry> 
      <box size="0.05 0.2 0.5" /> 
      </geometry>
    </collision>
    
      <visual>
      <origin
        xyz="-0.025 0 0.25"
        rpy="0 0 0" />
      <geometry>
      <box size="0.05 0.2 0.5" />
      </geometry>
    </visual>  
    
    
    <inertial>
      <origin xyz="-0.025 0 0.25" rpy="0 0 0" />
      <mass
        value="1" />
    <inertia
        ixx="1"
        ixy="0.0"
        ixz="0.0"
        iyy="1"
        iyz="0.0"
        izz="1" />
    </inertial>
    </link>
  
  
