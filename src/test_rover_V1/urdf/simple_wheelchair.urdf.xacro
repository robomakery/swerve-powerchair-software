<?xml version="1.0" encoding="utf-8"?>
<robot
  xmlns:xacro="http://www.ros.org/wiki/xacro"
  name="new_wheelchair">
  
  
  
  <xacro:include filename="$(find test_rover_V1)/urdf/box.xacro" />
  <xacro:include filename="$(find test_rover_V1)/urdf/zyl.xacro" />
  <xacro:include filename="$(find test_rover_V1)/urdf/steering_module.xacro" />
  
  <link    name="base_link"/>
  <link    name="base_footprint"/>

  <joint    name="base_joint"    type="fixed">
    <origin      xyz="0 0 0.00"      rpy="0 0 0" />
    <parent      link="base_link" />
    <child       link="chassis_link" />
   </joint>

  <joint    name="footprint_joint"    type="fixed">
    <origin      xyz="0.0 0.0 0.00"      rpy="0 0 3.14" />
    <child       link="base_footprint" />
    <parent      link="base_link" />
   </joint>
   
  
 <xacro:box_def name="chassis_link" origin_xyz="0 0 0" lenght="0.8" breadth="0.8" height="0.03" mass="2" parent_name="base_footprint" joint_type="fixed" joint_origin="0 0 0.1" />   
 
<xacro:box_def name="chair" origin_xyz="0 0 0.1" lenght="0.2" breadth="0.2" height="0.2" mass="5" parent_name="chassis_link" joint_type="fixed" joint_origin="0 0 0.015" />
 
 <xacro:box_def name="armrest_left" origin_xyz="0 0.125 0.15" lenght="0.3" breadth="0.05" height="0.3" mass="1" parent_name="chair" joint_type="fixed" joint_origin="0 0.1 0" />      
 
 <xacro:box_def name="armrest_right" origin_xyz="0 -0.125 0.15" lenght="0.3" breadth="0.05" height="0.3" mass="1" parent_name="chair" joint_type="fixed" joint_origin="0 -0.1 0" />  
  <xacro:box_def name="backrest_right" origin_xyz="0 0 0" lenght="0.05" breadth="0.2" height="0.5" mass="2" parent_name="chair" joint_type="fixed" joint_origin="-0.125 0.0 0.15" /> 
  
